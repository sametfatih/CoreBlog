@model Blog

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Önizleme</title>

    <script>

		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}
    </script>
    <link href="~/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/css/jquery.desoslide.css" rel="stylesheet">
    <link href="~/css/single.css" rel="stylesheet" />
    <link href="~/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/css/fontawesome-all.css" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800"
          rel="stylesheet">

    <script src="~/lib/jquery/dist/jquery.js"></script>
</head>
<body>


    <div class="banner-inner">
    </div>
    <ol class="breadcrumb justify-content-center">
        <h3>ÖNİZLEME</h3>
    </ol>

    <!--//banner-->
    <section class="banner-bottom">
        <!--/blog-->
        <div class="container">
            <div class="row">
                <!--left-->
                <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                    <div class="blog-grid-top">
                        <div class="b-grid-top">
                            <div class="blog_info_left_grid">
                                <a href="#">
                                    <img src="@Model.BlogImagePath" class="img-fluid" alt="">
                                </a>
                            </div>
                            <div class="blog-info-middle">
                                <ul>
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i> @(((DateTime)Model.BlogCreateDate).ToString("MMM dd, yyyy"))
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-thumbs-up"></i> ~ Beğeni
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="far fa-comment"></i> ~ Yorum
                                        </a>
                                    </li>

                                </ul>
                            </div>
                        </div>

                        <h3>
                            <a style="color:#555555;">@Model.BlogTitle</a>
                        </h3>
                        <div class="blog-detail">@Html.Raw(Model.BlogContent)</div>

                    </div>
                </div>

                
                <!--right-->
                <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                    <div class="right-blog-info text-left">

                        <div class="tech-btm">
                            <h4>Bültenimize abone olun</h4>
                            <form id="subscribeForm" novalidate>
                                <input type="email" placeholder="Email adresinizi giriniz..." id="subscribeEmail" required name="SubscriberMail">
                                <span class="result small" id="result_subscribe" style="color:red;display:inline-block;"></span>
                                <input type="button" id="subscribe" value="Abone Ol">
                            </form>
                        </div>

                        @await Component.InvokeAsync("Categories")
                        @await Component.InvokeAsync("AuthorBlogs", new { id = @Model.AuthorId })
                        @await Component.InvokeAsync("NewBlogs")


                    </div>

                </aside>
                <!--//right-->
            </div>
        </div>
    </section>
    <!--//main-->

    <script src="~/js/jquery-2.2.3.min.js"></script>
    <!-- //js -->
    <!-- desoslide-JavaScript -->
    <script src="~/js/jquery.desoslide.js"></script>
    <!-- //password-script -->
    <!--/ start-smoth-scrolling -->
    <script src="~/js/move-top.js"></script>
    <script src="~/js/easing.js"></script>
    <script>
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({
                    scrollTop: $(this.hash).offset().top
                }, 900);
            });
        });
    </script>
    <!--// end-smoth-scrolling -->

    <script>
        $(document).ready(function () {

            var defaults = {
                containerID: 'toTop', // fading element id
                containerHoverID: 'toTopHover', // fading element hover id
                scrollSpeed: 1200,
                easingType: 'linear'
            };


            $().UItoTop({
                easingType: 'easeOutQuart'
            });

        });
    </script>
    <a href="#home" class="scroll" id="toTop" style="display: block;">
        <span id="toTopHover" style="opacity: 1;"> </span>
    </a>

    <!-- //Custom-JavaScript-File-Links -->
    <script src="~/js/bootstrap.js"></script>


</body>
</html>
